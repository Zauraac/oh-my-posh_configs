{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "transient_prompt": {
    "template": "{{ .Segments.Time.CurrentDate | date .Segments.Time.Format }} \uf155 ",
    "foreground": "#FEF5ED",
    "background": "transparent",
    "properties": {
	      "time_format": "15:04:05"
    }
  },
  "console_title_template": "{{ if .Root }}â‡§ {{ end}}{{ .Shell }} | {{ .Folder }}",
  "upgrade": {
    "source": "cdn",
    "interval": "168h",
    "auto": false,
    "notice": false
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "macos": "\uf179",
            "ubuntu": "\uf31b",
            "windows": "\uf17a", 
			"fedora": "\uf30b",
			"alpine": "\uf300"
          },
          "leading_diamond": "\ue0b2",
          "trailing_diamond": "\ue0d6",
          "template": " {{ if .WSL }}\uf17a \uf090 {{ end }}{{.Icon}} ",
          "foreground": "#003a67",
          "background": "#FEF5ED",
          "type": "os",
		  "description": "OS indicator with WSL support",
          "style": "diamond"
        },
        {
          "leading_diamond": "\ue0b2",
          "trailing_diamond": "\ue0b0",
          "template": " \uf120 {{ .Name }} ",
          "foreground": "#003a67",
          "background": "#FEF5ED",
          "type": "shell",
          "style": "diamond",
		  "description": "Shell type name 00",
		  "properties": {
			  "mapped_shell_names": {
				  "pwsh": "PS",
				  "bash": "Bash"
			  }
		  }
        },
        {
          "leading_diamond": "\ue0d7",
          "trailing_diamond": "\ue0b0",
          "template": " {{ if eq .OS \"windows\" }}\uefc5 {{ round .PhysicalPercentUsed .Precision }}% {{ end }}",
          "foreground": "#FEF5ED",
          "background": "#003a67",
	  "min_width": 65,
          "type": "sysinfo",
		  "description": "Memory usage",
          "style": "diamond"
        },
        {
          "properties": {
            "style": "austin",
			"always_enabled": false,
            "threshold": 10
          },
          "leading_diamond": "\ue0d7",
          "trailing_diamond": "\ue0b0",
          "template": " {{ .FormattedMs }} ",
          "foreground": "#FEF5ED",
          "background": "#575656",
          "type": "executiontime",
		  "description": "Command exec. time",
          "style": "diamond"
        }
      ],
      "newline": true
    },
	{
		"type": "prompt",
		"alignment": "right", 
		"segments": [
		{
			"properties": {
				"branch_icon": "\ue725 ",
				"fetch_status": true,
				"fetch_upstream_icon": true,
				"fetch_worktree_count": true,
				"mapped_upstreams": {
					"forgejo": "\uf335"
				}
			},
			"leading_diamond": "\ue0b2",
			"trailing_diamond": "\ue0d6",
			"template": " {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
			"foreground": "#011627",
			"background": "#4aafff",
			"type": "git",
			"description": "Git",
			"style": "diamond"
        },
		{
			"leading_diamond": "\ue0b2",
			"trailing_diamond": "\ue0b0",
			"template": " {{ if eq .Type \"wifi\"}}\uf1eb  {{ .Name }}{{ else if eq .Type \"ethernet\"}}\ueba9{{ else }}\udb85\ude16{{ end }} ",
			"foreground": "#FEF5ED",
			"background": "#003a67",
			"type": "connection",
			"description": "Wifi/ethernet connection indicator",
			"style": "diamond"
		},
		{
			"leading_diamond": "\ue0b2",
			"trailing_diamond": "\ue0b0",
			"template": "{{ if ne .OS \"windows\" }} \uefc5 {{ round .PhysicalPercentUsed .Precision }}% {{ end }}",
			"foreground": "#FEF5ED",
			"background": "#003a67",
			"type": "sysinfo",
			"description": "Fallback for connection type when Win. isn't the current OS. Display memory instead of in the previous 'sysinfo' segment.",
			"style": "diamond"
		},
		{ "type": "battery",
		  "style": "diamond",
		  "leading_diamond": "\ue0d7",
		  "trailing_diamond": "\ue0b0",
		  "foreground": "#003a67",
		  "background": "#FEF5ED",
		  "template": " {{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ end }} ",
		  "description": "Charging icon, shouldn't display for desktop-class devices",
		  "min_width": 80,
		  "properties": {
			"discharging_icon": "\udb85\udfe4",
			"charging_icon": "\udb80\udc84",
			"charged_icon": "\udb85\udfe2",
			"not_charging_icon": "\udb80\udc83",
			"display_error": true
		  }
		}
		]
	},
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "template": "\u256d\u2500",
		  "foreground": "#FEF5ED",
          "type": "text",
          "style": "plain"
        },
        {
          "properties": {
            "time_format": "15:04"
          },
          "template": " \ueb7c {{ .CurrentDate | date .Format }} |",
          "type": "time",
	  "foreground": "#FEF5ED",
	  "description": "Current time",
	  "min_width": 60,
          "style": "plain"
        },
        {
          "properties": {
            "folder_icon": "\uf114",
            "folder_separator_icon": " \uf061 ",
            "home_icon": "\ueb06",
			"style": "mixed",
			"mixed_threshold": 9,
			"display_root": true
          },
          "template": " {{ .Path }} ",
          "type": "path",
		  "foreground": "#FEF5ED",
		  "description": "Current working directory",
          "style": "plain"
        }
      ],
      "newline": true
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "properties": {
			"always_enabled": true
          },
		"template": " {{ if .Root }}\uf148 {{ end }}{{ if .SSHSession }}\ueb3a {{ else }}\uf007 {{ end }}{{ .UserName }}  \uf108 {{ .HostName }} ",
          "type": "session",
		  "foreground": "#FEF5ED",
		  "description": "Elevation indicator, user and machine readout",
          "style": "plain"
        },
		{
		"type": "ipify",
		"style": "plain",
		"foreground": "#FEF5ED",
		"template": " | {{ .IP }} ",
		"description": "Separator and public IP address fetcher",
		"min_width": 60,
		"properties": {
			"http_timeout": 1000
			}
		}
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "always_enabled": true
          },
          "template": "\u2570\u2500 \ueac4 ",
          "type": "status",
		  "foreground": "#FEF5ED",
		  "description": "Final line, prompt",
          "style": "plain"
        }
      ],
      "newline": true
    }
  ],
  "version": 3
}
