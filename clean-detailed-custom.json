{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "transient_prompt": {
    "template": "\uf155 ",
    "foreground": "#FEF5ED",
    "background": "transparent"
  },
  "console_title_template": "{{ .Folder }}",
  "upgrade": {
    "source": "cdn",
    "interval": "168h",
    "auto": false,
    "notice": false
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "macos": "\uf179 ",
            "ubuntu": "\uf31b ",
            "windows": "\uf17a ", 
			"fedora": "\uf30b ",
			"alpine": "\uf300 "
          },
          "leading_diamond": "\ue0b2",
          "trailing_diamond": "<transparent,#FEF5ED>\ue0b2</>",
          "template": " {{ if .WSL }}\uf17a \uf090 @{{ end }}{{.Icon}}",
          "foreground": "#003a67",
          "background": "#FEF5ED",
          "type": "os",
          "style": "diamond"
        },
        {
          "leading_diamond": "\ue0b2",
          "trailing_diamond": "\ue0b0",
          "template": " \uf120 {{ .Name }} ",
          "foreground": "#003a67",
          "background": "#FEF5ED",
          "type": "shell",
          "style": "diamond",
		  "properties": {
			  "mapped_shell_names": {
				  "pwsh": "PS"
			  }
		  }
        },
        {
          "leading_diamond": "<transparent,#003a67>\ue0b0",
          "trailing_diamond": "\ue0b0",
          "template": " \uefc5 {{ round .PhysicalPercentUsed .Precision }}% ",
          "foreground": "#FEF5ED",
          "background": "#003a67",
          "type": "sysinfo",
          "style": "diamond"
        },
        {
          "properties": {
            "style": "austin",
			"always_enabled": false,
            "threshold": 10
          },
          "leading_diamond": "<transparent,#575656>\ue0b0</>",
          "trailing_diamond": "\ue0b0",
          "template": " {{ .FormattedMs }} ",
          "foreground": "#FEF5ED",
          "background": "#575656",
          "type": "executiontime",
          "style": "diamond"
        }
      ],
      "newline": true
    },
	{
		"type": "prompt",
		"alignment": "right", 
		"segments": [
		{
			"properties": {
				"branch_icon": "\ue725 ",
				"fetch_status": true,
				"fetch_upstream_icon": true,
				"fetch_worktree_count": true
			},
			"leading_diamond": "\ue0b2",
			"trailing_diamond": "<transparent,#4aafff>\ue0b2</>",
			"template": " {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
			"foreground": "#011627",
			"background": "#4aafff",
			"type": "git",
			"style": "diamond"
        },
		{
			"leading_diamond": "\ue0b2",
			"trailing_diamond": "\ue0b0<#003a67,transparent>",
			"template": " {{ if eq .Type \"wifi\"}}\uf1eb {{ .Name }}{{ else if eq .Type \"ethernet\"}}\ueba9{{ end }} ",
			"foreground": "#FEF5ED",
			"background": "#003a67",
			"type": "connection",
			"style": "diamond"
		}
		]
	},
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "template": "\u256d\u2500",
		  "foreground": "#FEF5ED",
          "type": "text",
          "style": "plain"
        },
        {
          "properties": {
            "time_format": "15:04"
          },
          "template": " \ueac4 {{ .CurrentDate | date .Format }} |",
          "type": "time",
		  "foreground": "#FEF5ED",
          "style": "plain"
        },
        {
          "template": " \uf292 ",
          "type": "root",
		  "foreground": "#FEF5ED",
          "style": "plain"
        },
        {
          "properties": {
            "folder_icon": "\uf07b",
            "folder_separator_icon": " \uf061 ",
            "home_icon": "\ueb06",
			"style": "mixed",
			"mixed_threshold": 9,
			"display_root": true
          },
          "template": " {{ .Path }} ",
          "type": "path",
		  "foreground": "#FEF5ED",
          "style": "plain"
        }
      ],
      "newline": true
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "properties": {
			"always_enabled": true
          },
          "template": " {{ if .Root }}\uf148 {{ end }}{{ if .SSHSession }}\ueb3a {{ end }}{{ .UserName }}@{{ .HostName }} ",
          "type": "session",
		  "foreground": "#FEF5ED",
          "style": "plain"
        },
		{
		"type": "ipify",
		"style": "plain",
		"foreground": "#FEF5ED",
		"template": " | {{ .IP }} ",
		"properties": {
			"http_timeout": 1000
			}
		}
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "always_enabled": true
          },
          "template": "\u2570\u2500 \uf155 ",
          "type": "status",
		  "foreground": "#FEF5ED",
          "style": "plain"
        }
      ],
      "newline": true
    }
  ],
  "version": 3
}