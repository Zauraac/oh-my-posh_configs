{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "transient_prompt": {
    "template": "\ue285 ",
    "foreground": "#FEF5ED",
    "background": "transparent"
  },
  "console_title_template": "{{ .Folder }}",
  "upgrade": {
    "source": "cdn",
    "interval": "168h",
    "auto": false,
    "notice": false
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "macos": "\uf179 ",
            "ubuntu": "\uf31b ",
            "windows": "\uf17a "
          },
          "leading_diamond": "\ue0b2",
          "trailing_diamond": "<transparent,#FEF5ED>\ue0b2</>",
          "template": " {{ if .WSL }}WSL at {{ end }}{{.Icon}}",
          "foreground": "#011627",
          "background": "#FEF5ED",
          "type": "os",
          "style": "diamond"
        },
        {
          "leading_diamond": "\ue0b2",
          "trailing_diamond": "<transparent,#FEF5ED>\ue0b2</>",
          "template": " \uf120 {{ .Name }} ",
          "foreground": "#011627",
          "background": "#FEF5ED",
          "type": "shell",
          "style": "diamond",
		  "properties": {
			  "mapped_shell_names": {
				  "pwsh": "PS"
			  }
		  }
        },
        {
          "leading_diamond": "\ue0b2",
          "trailing_diamond": "\ue0b0",
          "template": " \uefc5 {{ round .PhysicalPercentUsed .Precision }}% ",
          "foreground": "#FEF5ED",
          "background": "#003a67",
          "type": "sysinfo",
          "style": "diamond"
        },
        {
          "properties": {
            "style": "austin",
			"always_enabled": false,
            "threshold": 1
          },
          "leading_diamond": "<transparent,#575656>\ue0b0</>",
          "trailing_diamond": "\ue0b0",
          "template": " {{ .FormattedMs }} ",
          "foreground": "#FEF5ED",
          "background": "#575656",
          "type": "executiontime",
          "style": "diamond"
        }
      ],
      "newline": true
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "properties": {
            "branch_icon": "\ue725 ",
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "fetch_worktree_count": true
          },
          "leading_diamond": "\ue0b2",
          "trailing_diamond": "\ue0b0",
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "foreground": "#011627",
          "background": "#fd9047",
          "type": "git",
          "style": "diamond"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "template": "\u256d\u2500",
          "type": "text",
          "style": "plain"
        },
        {
          "properties": {
            "time_format": "15:04"
          },
          "template": " \ueac4 {{ .CurrentDate | date .Format }} |",
          "type": "time",
          "style": "plain"
        },
        {
          "template": " \uf292 ",
          "type": "root",
          "style": "plain"
        },
        {
          "properties": {
            "folder_icon": "\uf07b",
            "folder_separator_icon": " \uf061 ",
            "home_icon": "\ueb06",
			"style": "mixed",
			"mixed_threshold": 9,
			"display_root": true
          },
          "template": " {{ .Path }} ",
          "type": "path",
          "style": "plain"
        }
      ],
      "newline": true
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "properties": {
			"always_enabled": true
			
          },
          "template": " {{ if .Root }} \uf148 {{ end }}{{ if .SSHSession }}\ueb3a {{ end }}{{ .UserName }}@{{ .HostName }} ",
          "type": "session",
          "style": "plain"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "always_enabled": true
          },
          "template": "\u2570\u2500 \uf155 ",
          "type": "status",
          "style": "plain"
        }
      ],
      "newline": true
    }
  ],
  "version": 3
}